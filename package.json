{
  "name": "igniteui-i18n",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "build:core": "tsc --project projects/igniteui-i18n-core/tsconfig.build.json",
    "build:resources": "tsc --project projects/igniteui-i18n-resources/tsconfig.build.json",
    "clean:core": "rimraf ./dist/igniteui-i18n-core",
    "clean:resources": "rimraf ./dist/igniteui-i18n-resources",
    "lint": "biome lint",
    "lint:fix": "biome check --write",
    "test": "vitest --config vitest.browser.config.ts",
    "test:inline": "vitest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^24.6.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "^4.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "playwright": "^1.55.1",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,mjs,json}": [
      "biome check --fix --no-errors-on-unmatched"
    ]
  }
}
