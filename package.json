{
  "name": "igniteui-i18n",
  "version": "0.0.0",
  "scripts": {
    "build": "npm run build:core && npm run build:resources",
    "build:core": "tsc --project projects/igniteui-i18n-core/tsconfig.build.json && gulp copyPackageForCore",
    "build:resources": "tsc --project projects/igniteui-i18n-resources/tsconfig.build.json && gulp copyPackageForResources",
    "lint": "eslint .",
    "test": "vitest --config vitest.browser.config.ts",
    "test:inline": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^20.11.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "^9.32.0",
    "gulp": "^5.0.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
