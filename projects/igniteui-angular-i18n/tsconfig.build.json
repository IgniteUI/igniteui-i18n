    "baseUrl": "./",
    "rootDir": "./src",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "../../dist/igniteui-angular-i18n",
    "stripInternal": true,
