{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "useDefineForClassFields": true,
    "target": "ES2022",
    "module": "es2022",
    "lib": ["ES2022", "DOM"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": false,
    "declaration": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "igniteui-i18n-core": ["projects/igniteui-i18n-core/src/index.ts"],
      "igniteui-i18n-resources": ["projects/igniteui-i18n-resources/src/index.ts"]
    }
  }
}
