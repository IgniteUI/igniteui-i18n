{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "es2022",
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    //"noEmit": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "rootDir": ".",
    "paths": {
        "igniteui-i18n-core": [
          "projects/igniteui-i18n-core/src/index.ts"
        ],
        "igniteui-i18n-resources": [
          "projects/igniteui-i18n-resources/src/index.ts"
        ]
    }
  }
}
